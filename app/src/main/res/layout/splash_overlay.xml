<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/splashOverlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_background"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!-- First image: Pazhonic logo (icon) -->
        <ImageView
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:contentDescription="@string/splash_logo_content_description"
            android:scaleType="fitCenter"
            android:src="@drawable/pazhlogo" />

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- Second image: Pazhonic type/wordmark -->
        <ImageView
            android:layout_width="220dp"
            android:layout_height="84dp"
            android:contentDescription="@string/splash_typo_content_description"
            android:scaleType="fitCenter"
            android:src="@drawable/pazhtypelogo" />
    </LinearLayout>
</FrameLayout>
